rule "Get overhead per team"
    when
        $t: Team()
        accumulate(
            Slot($s: this, this.plays($t)),
            $min: min($s.getNumber()),
            $max: max($s.getNumber()),
            $count: count($s)
        )
    then
        // ((max - min + 1) / min_slots_per_match) - count
        insertLogical(
            new IntConstraintOccurrence("teamOverhead", ConstraintType.NEGATIVE_SOFT,
                $count.intValue() < 2 ? 0 : 
                    Math.max(0, (($max.intValue() - $min.intValue() + 1) / 2 - $count.intValue()) * 2 + 1), $t)
        );
        /*insertLogical(
